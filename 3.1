#include <stdio.h>
#include <stdlib.h>
#include <time.h>
#define size 10

int main()
{
  int arr[size];
   
  srand(time(NULL));
  for (int i = 0; i < size; i++)
  {
    arr[i] = rand() % 100;
    printf("%d ", arr[i]);
  }
  int max = arr[0];

  for (int i = 0; i < size; ++i) 
  {
    if (max < arr[i]) 
    {
      max = arr[i];
    }
  }
  printf("\n%d\n", max);

  int min = arr[0];

  for (int i = 0; i < size; ++i) 
  {
    if (arr[i] < min)
    {
      min = arr[i];
    }
  }
  printf("\n%d\n", min);

  double average = 0;

  for (int i = 0; i < size; i++)
  {
    average += arr[i];
  }
  average /= size;
  printf("%.2lf\n", average);
  for(int i = 1;i < size; i++)
  {
    int check = 1;
    for(int j = size - 1; j > i; j--)
    {
      if(arr[j] < arr[j - 1])
      {
        int variable_to_exchange =arr[j];
        arr[j] = arr[j -1];
        arr[j - 1] = variable_to_exchange;
        check = 0;
      }
    }
    if(check == 1)
    {
      i = size;
    }
  }
  printf("\n");
  for (int i = 0; i < size; i++)
  {
    printf("%d ", arr[i]);
  }
  int mediana = arr[(size/2)];
  printf("\n%d\n", mediana);

  return 0;
}
